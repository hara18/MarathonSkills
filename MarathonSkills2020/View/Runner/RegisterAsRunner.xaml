<Page x:Class="MarathonSkills2020.View.Runner.RegisterAsRunner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2020.View.Runner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterAsRunner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>
        <Button Command="{Binding Path=LoginCommand}"
                        Content="Я участвовал раннее"
                        Template="{StaticResource ButtonTemplate}"
                        Style="{StaticResource ButtonHigh}"></Button>
        <Button
                    Grid.Row="1" Style="{StaticResource ButtonHigh}"
                    Content="Я новый участник" 
                    Template="{StaticResource ButtonTemplate}"></Button>
        <Button Style="{StaticResource ButtonSmall}" Command="{Binding Path=LoginCommand}" Margin="10" Grid.Row="3" Template="{StaticResource ButtonTemplate}"  >Войти</Button>




    </Grid>
</Page>
